{
  "extends": "./tsconfig.paths.json",
  "compilerOptions": {
    "incremental": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "ES2021",
    "outDir": "lib",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "skipLibCheck": true,
    "types": ["node"],
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "tsBuildInfoFile": "./lib/.tsbuildinfo",
  },
  "include": ["src/**/*.ts", "serverless.ts", "infrastructure/**/*.ts", "misc/scripts/**/*.ts"],
  "exclude": ["node_modules/**/*"],
  "ts-node": {
    "require": ["tsconfig-paths/register"],
    "files": true
  }
}
